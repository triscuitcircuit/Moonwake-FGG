{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es2022",
    "types": ["vite/client"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"]
}
